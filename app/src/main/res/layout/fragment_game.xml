<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#076015"
    tools:context=".view.fragments.GameFragment">

    <TextView
        android:visibility="gone"
        android:id="@+id/id_game_title_opponent"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:textStyle="italic"
        android:layout_gravity="center"
        android:textColor="#076015"
        android:text="the opponent:"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_height="50dp"/>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/id_game_opp_ll"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/white"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_game_dice_op1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp" />

        <ImageView
            android:id="@+id/id_game_dice_op2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp" />

    </LinearLayout>


    <TextView
        android:id="@+id/id_game_title_my_dice"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:textStyle="italic"
        android:layout_gravity="center"
        android:textColor="#076015"
        android:text="my dice:"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_height="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/white"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_game_dice_my1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp" />

        <ImageView
            android:id="@+id/id_game_dice_my2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="90dp">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="185dp"
            android:id="@+id/id_game_even"
            android:enabled="false"
            android:textColor="@color/white"
            android:text="even numbers"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/black"
            android:layout_height="70dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="185dp"
            android:id="@+id/id_game_odd"
            android:enabled="false"
            android:textColor="@color/white"
            android:text="odd number"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:background="@color/black"
            android:layout_height="70dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="90dp">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="185dp"
            android:enabled="false"
            android:id="@+id/id_game_more"
            android:textColor="@color/white"
            android:text="more than the opponent"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/black"
            android:layout_height="70dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="185dp"
            android:enabled="false"
            android:id="@+id/id_game_less"
            android:textColor="@color/white"
            android:text="less than the opponent's"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:background="@color/black"
            android:layout_height="70dp"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/id_game_button_toss_dice"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:enabled="false"
        android:text="toss the opponent's dice"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="italic"
        android:visibility="visible" />


    <View
        android:visibility="gone"
        android:id="@+id/id_game_view_linea1"
        android:layout_width="250dp"
        android:layout_gravity="center"
        android:background="@color/black"
        android:layout_marginTop="30dp"
        android:layout_height="10dp"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/id_game_tv_correct"
        android:layout_width="373dp"
        android:layout_height="63dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="correct: 0"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textStyle="bold" />

    <View
        android:visibility="gone"
        android:id="@+id/id_game_view_linea2"
        android:layout_width="250dp"
        android:layout_gravity="center"
        android:background="@color/black"
        android:layout_height="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="138dp"
        android:layout_height="77dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@color/black"
        android:text="GO"
        android:textStyle="bold"
        android:id="@+id/id_game_go"
        android:textColor="@color/white"
        android:textSize="60sp" />

    <ImageView
        android:id="@+id/id_game_img_dice"
        android:layout_width="300dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_height="180dp"/>


</LinearLayout>