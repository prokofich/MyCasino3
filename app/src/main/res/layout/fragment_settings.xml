<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/id_settings_ll"
    android:layout_height="match_parent"
    android:background="#076015"
    tools:context=".view.fragments.SettingsFragment">

    <TextView
        android:id="@+id/id_settings_title"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:text="TUTORIAL"
        android:gravity="center"
        android:textSize="55sp"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:layout_height="70dp"/>
    <View
        android:id="@+id/id_settings_view_linea"
        android:layout_width="300dp"
        android:background="@color/black"
        android:layout_gravity="center"
        android:layout_height="10dp"/>


    <TextView
        android:id="@+id/id_settings_textview_tutorial"
        android:layout_width="386dp"
        android:layout_height="574dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/tutorial"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="italic" />




</LinearLayout>